<p id="notice"><%= notice %></p>
<div class="text-center">
<h1>Cocktails</h1>
</div>




<br>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">

          <div class="card-body">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
