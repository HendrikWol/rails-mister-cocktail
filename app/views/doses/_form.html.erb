<div class="text-center">

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient %>
  </div>

  <div class="form-actions">
    <div class="btn-medium"><%= f.button :submit %></div>
  </div>
<% end %>

</div>
